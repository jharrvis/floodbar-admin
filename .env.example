# Database Configuration
DATABASE_URL="mysql://username:password@host:3306/database_name"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-super-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Gmail SMTP Configuration
# To get Gmail App Password:
# 1. Go to Google Account settings
# 2. Enable 2-factor authentication  
# 3. Go to "App passwords"
# 4. Generate app password for "Mail"
# 5. Use the generated 16-character password below
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-16-character-app-password"

# Xendit Configuration (for production)
XENDIT_API_KEY="your-xendit-api-key"
XENDIT_WEBHOOK_TOKEN="your-xendit-webhook-token"
XENDIT_PUBLIC_KEY="your-xendit-public-key"

# Optional Configuration
NODE_ENV="development"
